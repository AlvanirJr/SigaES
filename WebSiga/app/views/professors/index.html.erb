<p id="notice"><%= notice %></p>

<h1>Professors</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Cpf</th>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td><%= professor.nome %></td>
        <td><%= professor.email %></td>
        <td><%= professor.cpf %></td>
        <td><%= professor.id %></td>
        <td><%= link_to 'Visualizar', professor %></td>
        <td><%= link_to 'Editar', edit_professor_path(professor) %></td>
        <td><%= link_to 'Excluir', professor, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

