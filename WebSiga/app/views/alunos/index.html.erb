<p id="notice"><%= notice %></p>

<h1>Alunos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Cpf</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <td><%= aluno.nome %></td>
        <td><%= aluno.email %></td>
        <td><%= aluno.cpf %></td>
        <td> <button style="color:#2E2F30"> <%= link_to 'Visualizar', aluno %> </button></td>
        <td> <button style="color: blue"> <%= link_to 'Editar', edit_aluno_path(aluno) %></button></td>
        <td> <button style="color: #B00100"> <%= link_to 'Excluir', aluno, method: :delete, data: { confirm: 'Você tem certeza?' } %> </button></td>
        <td> <button style="color: #B00100"> <%= link_to 'Cadastrar aluno em disiplina', aluno, method: :delete, data: { confirm: 'Você tem certeza?' } %> </button></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button> <%= link_to 'Cadastrar Novo Aluno', new_aluno_path %> </button>

